{
  "name": "habits-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config --respawn --inspect=9029 --transpileOnly ./src/index.ts",
    "db:rm": "docker rm -f habits-db",
    "db:reset": "docker rm -f habits-db ; docker run --name habits-db -d -p 5433:5432 -e POSTGRES_PASSWORD=habits -e POSTGRES_USER=habits -e POSTGRES_DB=habits_db postgres:12.1",
    "db:run": "docker start habits-db && echo 'already created' || docker run --name habits-db -d -p 5433:5432 -e POSTGRES_PASSWORD=habits -e POSTGRES_USER=habits -e POSTGRES_DB=habits_db postgres:12.1",
    "migration": "ts-node -r tsconfig-paths/register src/scripts/migrations/run",
    "migration:create": "typeorm migration:create -n",
    "lint": "eslint src --ext=.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build -- --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint src --ext=.ts --fix-dry-run"
    ]
  },
  "author": "Resetand",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/bluebird": "3.5.30",
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.6",
    "@types/express": "4.17.3",
    "@types/express-pino-logger": "4.0.2",
    "@types/jsonwebtoken": "8.3.8",
    "@types/node": "13.9.5",
    "@types/pino": "5.17.0",
    "@types/uuid": "7.0.2",
    "@typescript-eslint/eslint-plugin": "2.25.0",
    "@typescript-eslint/parser": "2.25.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "husky": "4.2.3",
    "lint-staged": "10.0.10",
    "ts-node": "8.8.1",
    "ts-node-dev": "1.0.0-pre.44",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "bcrypt": "4.0.1",
    "body-parser": "1.19.0",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.0-rc.0",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-pino-logger": "4.0.0",
    "jsonwebtoken": "8.5.1",
    "pg": "7.18.2",
    "pino": "6.0.0",
    "pino-pretty": "3.6.1",
    "reflect-metadata": "0.1.13",
    "routing-controllers": "0.8.1-alpha.2",
    "serialize-error": "6.0.0",
    "sql-template-strings": "2.2.2",
    "typedi": "0.8.0",
    "typeorm": "0.2.24",
    "typeorm-naming-strategies": "1.1.0",
    "typeorm-typedi-extensions": "0.2.3",
    "utility-types": "3.10.0",
    "uuid": "7.0.2"
  }
}
