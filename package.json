{
  "name": "croco-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config --respawn --inspect=9029 --transpileOnly ./src/index.ts",
    "db:rm": "docker rm -f croco-db",
    "db:new": "npm run db:rm; npm run db:run; npm run migration up",
    "db:run": "docker run --name croco-db -d -p 5433:5432 -e POSTGRES_PASSWORD=croco -e POSTGRES_USER=croco -e POSTGRES_DB=croco_db postgres:12.1",
    "migration": "ts-node -r tsconfig-paths/register src/scripts/migrations/run",
    "migration:create": "typeorm migration:create -n",
    "media-server": "export $(grep -v '^#' .env | xargs -0); docker run -p 4443:4443 --rm -e  OPENVIDU_SECRET=$OPENVIDU_SECRET openvidu/openvidu-server-kms:2.13.0",
    "lint": "eslint src --ext=.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build -- --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint src --ext=.ts --fix-dry-run"
    ]
  },
  "author": "Resetand",
  "license": "ISC",
